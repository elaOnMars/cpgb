VPATH = ../../src/cpgb
IOPTS = -I../include
LOPTS = -L../lib -lnacl

%.o : %.c
	$(compiler) $(IOPTS) -c $? -o $@
#TODO: this the right way
% : %.o
	$(compiler) $(IOPTS) $(LOPTS) $? ../lib/randombytes.o -o $@

all : keygen sign verify encrypt decrypt
keygen : keygen.o 
sign : sign.o
verify: verify.o 
encrypt: encrypt.o slurp.o
decrypt: decrypt.o

.PHONY clean:
	rm *

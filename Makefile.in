VPATH = ../../src/cpgb
IOPTS = -I../include
LOPTS = -L../lib -lnacl

%.o : %.c
	$(compiler) $(IOPTS) -c $? -o $@

% : %.o
	$(compiler) $(IOPTS) $(LOPTS) $? -o $@

all : keygen sign verify
keygen : keygen.o ../lib/randombytes.o
sign : sign.o ../lib/randombytes.o
sign.o : sign.c
verify: verify.o ../lib/randombytes.o
verify.o : verify.c
keygen.o : keygen.c

.PHONY clean:
	rm *